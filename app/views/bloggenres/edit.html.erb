<h1>Bloggenres#edit</h1>
<p>※「<%= @bloggenre.name %>」ジャンルの編集</p>
<% if @bloggenre.errors.any? %>
  <ul>
    <% @bloggenre.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<table>
  <%= form_for(@bloggenre, url:{ controller: 'bloggenres', action: 'update' }) do |form| %>
    <tr><th>name</th>
      <td><%= form.text_field :name %></td>
    </tr>
    <tr><th>memo</th>
      <td><%= form.text_field :memo %></td>
    </tr>
    <tr><th></th>
      <td><%= form.submit '送信' %></td>
    </tr>
  <% end %>
</table>
