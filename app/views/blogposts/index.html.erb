<h1>Blogposts#index</h1>
<p>※投稿記事の一覧</p>
<table>
  <tr>
    <th>Id</th><th>title</th><th>read</th><th>genre</th><th colspan='2'></th>
  </tr>
  <% @blogposts.each do |blogpost| %>
    <tr>
      <td><%= blogpost.id %></td>
      <td><%= blogpost.title %></td>
      <td><%= blogpost.read %></td>
      <td><%= blogpost.bloggenre.name %></td>
      <td><%= link_to('Edit', edit_blogpost_path(blogpost)) %></td><!--blogpostのパスはとりあえずprefixで書いておく-->
      <td><%= link_to('Delete', blogpost_path(blogpost), method: :delete, data: { confirm: "#{blogpost.title}のデータを削除しますか？" }) %></td> 
    </tr>
  <% end %>
</table>
<p class="link"><%= link_to('新規作成＞＞', new_blogpost_path) %></p>
