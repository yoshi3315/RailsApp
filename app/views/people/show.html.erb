<h1>People#show</h1>
<p><%= @msg %></p>
<pre>
  <table>
    <tr><th>Id</th>
      <td><%= @person.id %></td>
    </tr>
    <tr><th>Name</th>
      <td><%= @person.name %></td>
    </tr>
    <tr><th>Age</th>
      <td><%= @person.age %></td>
    </tr>
    <tr><th>Mail</th>
      <td><%= @person.mail %></td>
    </tr>
    <tr><th>Message</th>
      <td>
        <% if @person.message != nil %>
          <% @person.message.each do |message| %>
            <%= message.title %>
          <% end %>
        <% end %>
      </td>
    </tr>
  </table>
</pre>