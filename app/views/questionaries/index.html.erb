<p id="notice"><%= notice %></p>

<h1>アンケートしよう！</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>期間</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @questionaries.each do |questionary| %>
      <tr>
        <td><%= questionary.title %></td>
        <td><%= 'あと、約' + ((questionary.deadline - Time.zone.now) / (60*60*24)).to_i.to_s + '日' %>
          <% if questionary.deadline > Time.zone.now %>
            <span class='not_finished'>受付中</span></td>
            <td>
              <%= link_to('アンケートを表示', questionary_path(questionary)) %>
            </td>
          <% else %>
            <span class='finished'>受付終了</span></td>
            <td>
            </td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しいアンケートを作る', new_questionary_path %>
